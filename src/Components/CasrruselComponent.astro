---
interface Props {
    titulo: string;
    imagenes: string[];
}
const {titulo, imagenes} = Astro.props;
---

    <div class="carrusel-contenedor">
    <div class="carrusel-auto">
        {imagenes.map((url, index) => (
        <div class="slide">
            <img src={url} alt="carrusel image" />
            <div class="overlay"></div>
        </div>
        ))}
        {imagenes.map((url, index) => (
            <div class="slide">
                <img src={url} alt="carrusel image" />
                <div class="overlay"></div>
            </div>
            ))}
    </div>
    <div class="texto-superpuesto">{titulo}</div>
    </div>

  <style>
    
    .carrusel-contenedor {
  position: relative;
  overflow: hidden;
  background-color: #0A2C45;
  height: 325px;
  align-content: center;
}

.carrusel-auto {
  display: flex;
  gap: 1.5rem;
  width: max-content;
  animation: scrollCarrusel 35s linear infinite;
  scroll-snap-type: x mandatory;
  scroll-behavior: smooth;
}



.slide {
  flex: 0 0 auto;
  width: 120vw; /* MUCHO más ancho que el viewport */
  max-width: 600px;
  height: 240px;
  position: relative;
  scroll-snap-align: start;
  border-radius: 10px;
  overflow: hidden;
}

@media (min-width: 768px) {
  .slide {
    width: 380px;
    height: 260px;
  }
}

@media (min-width: 1024px) {
  .slide {
    width: 420px;
    height: 300px;
  }
}

.slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Degradado oscuro sobre imagen */
.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(10, 44, 69, 0.2), rgba(10, 44, 69, 0.8));
  z-index: 1;
}

/* Texto centrado y responsivo */
.texto-superpuesto {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: clamp(1rem, 4vw, 2.5rem);
  font-weight: bold;
  text-align: center;
  z-index: 2;
  pointer-events: none;
  padding: 0 1rem;
  max-width: 90%;
}

@keyframes scrollCarrusel {
  0% { transform: translateX(0); }
  100% { transform: translateX(-30%); } /* Ya no es -50%, ahora avanza más */
}

@media (min-width: 768px) {
  .slide {
    width: 300px;
    height: 250px;
  }

  .texto-superpuesto {
    font-size: 2rem;
  }

  }


</style>