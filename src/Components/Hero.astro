---

interface Props {
  center?: boolean;
  bgImage: ImageMetadata;
  title: string;
  subtitle: string;
}

let { center = false, bgImage, title, subtitle } = Astro.props;
const mobileTopMargin = subtitle.length > 40 ? 131 : 191;
---
<div
  class:list={[
    "bg-no-repeat bg-center bg-cover h-[50vh] lg:h-[85vh] relative text-white",
    !center && "px-6 sm:px-9 lg:px-16"
  ]}
  style={`background-image: url(${bgImage.src})`}
>
  <!-- Capa de superposiciÃ³n -->
  <div class="absolute inset-0 bg-[#11293e] opacity-20 z-0"></div>

  <!-- Contenido -->
  <div
  class:list={[
    "flex flex-col justify-center w-full relative z-10 sm:top-[222px] lg:top-[311px]",
    center && "items-center"
  ]}
  style={`top: ${mobileTopMargin}px`}
>
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-8">{title}</h1>
    <p class:list={["sm:text-xl lg:text-3xl max-w-[80%]", center && "text-center"]}>
      {subtitle}
    </p>
  </div>
</div>
