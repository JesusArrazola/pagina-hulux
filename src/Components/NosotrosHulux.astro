  }

  .hero {
    background: url('src/assets/11293E (8).png') no-repeat center center/cover;
    height: 85vh;
    display: flex;
    align-items: center;
    padding: 0 5%;
    background-attachment: fixed;
  }

  .fondo {
    background: url('../assets/Hulux_(1).gif') no-repeat center center/cover;
    height: 80vh;
    display: flex;
    align-items: center;
    padding: 30%;
    background-attachment: fixed; 
  }

  .content {
    color: white;
    max-width: 1200px;
  }

  h1 {
    font-size: 3rem;
    font-weight: bold;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  p {
    font-size: 1.8rem;
    margin-bottom: 2rem;
  }

  .btn {
    background-color: #ff5722;
    color: white;
