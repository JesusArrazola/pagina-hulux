  }

  .info-section h2 {
    font-size: 2.8 rem;
    font-weight: bold;
    line-height: 1.2;
    margin-bottom: 1rem;

  }

  .info-section p {
    font-size: 1.4rem;
    max-width: 1500px;
    margin: 0 auto;
    line-height: 1.6;
  }

  


  /* Responsive */
  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    p {
      font-size: 1rem;
    }

    .content {
      max-width: 100%;
    }

    .info-section h2 {
      font-size: 1.5rem;
    }

    .info-section p {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 1.5rem;
    }

    p {
      font-size: 0.95rem;
    }

    .btn {
      font-size: 0.95rem;
      padding: 10px 20px;
    }
  }
