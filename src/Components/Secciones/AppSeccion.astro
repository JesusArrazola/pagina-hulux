---
import img from "../../assets/images/app.png";

//Íconos 
import pagosLinea from "../../assets/images/pago_en_línea.png";
import reporte from "../../assets/images/reporte_de_servicio.png";
import diagnostico from "../../assets/images/diagnostico.png";
import facturas from "../../assets/images/facturas.png";
import connect from "../../assets/images/connect.jpg";

//Badges
import GoogleBadge from "../../assets/images/google badge.png";
import AppleBadge from "../../assets/images/Download_on_the_App_Store_Badge_ESMX_RGB_blk_100217.svg";
---

<div class="bg-gradient-to-r from-amber-500 to-primary">
    <section class="flex flex-col items-center justify-between  py-16 gap-8 relative">

        <p class="font-bold text-2xl sm:text-4xl text-white">Descarga nuestra app</p>
    
        <div class="w-2/5 min-w-[210px] max-w-[610px]">
            <img src={img.src} alt="App Hulux Connect"/>
        </div>
        <!-- Column con los íconos -->
        <div id="cntr" class="h-[60%] w-[40%] lg:w-1/2 absolute top-1/2 left-0 lg:-translate-y-2/3 -translate-y-1/2 flex flex-col items-start md:items-center justify-center">
            <div class="h-full w-[100px] flex flex-col justify-around items-center">
                <div class="flex flex-col items-center justify-center gap-2 animate-soft-blink">
                    
                    <div class="w-12 sm:w-18 md:w-20 lg:w-24  aspect-square">
                        <img src={pagosLinea.src} class="w-full h-full" />
                    </div>
                    <p class="hidden md:block text-center text-white">
                        Pagos en línea
                    </p>
                </div>
                <div class="flex flex-col items-center justify-center gap-2 animate-soft-blink">
                    <div class="w-12 sm:w-18 md:w-20 lg:w-24 aspect-square">
                        <img src={reporte.src} class="w-full h-full" />
                    </div>
                    <p class="hidden md:block text-center text-white">
                        Reporte de servicio
                    </p>
                </div>
            </div>
        </div>
        <div id="cntr" class="h-[60%] w-[40%] lg:w-1/2 absolute top-1/2 right-0 lg:-translate-y-2/3 -translate-y-1/2 flex flex-col items-end md:items-center justify-center">
            <div class="h-full w-[100px] flex flex-col justify-around items-center">
                <div class="flex flex-col items-center justify-center gap-2 animate-soft-blink">
                    <div class="w-12 sm:w-18 md:w-20 lg:w-24 aspect-square">
                        <img src={facturas.src} class="w-full h-full" />
                    </div>
                    <p class="hidden md:block text-center text-white">
                        Facturas
                    </p>
                </div>
                <div class="flex flex-col items-center justify-center gap-2 animate-soft-blink">
                    <div class="w-12 sm:w-18 md:w-20 lg:w-24 aspect-square">
                        <img src={diagnostico.src} class="w-full h-full" />
                    </div>
                    <p class="hidden md:block text-center text-white">
                        Diagnóstico de red
                    </p>
                </div>
            </div>
        </div>
    <!-- 632 - 737 -->
    </section>
    <div class="md:hidden flex flex-wrap items-center justify-center gap-2 bottom-0 text-white  pb-4 font-bold">
        <p>• Pagos en línea</p>
        <p>• Reporte de Servicio</p>
        <p>• Facturas</p>
        <p>• Diagnóstico de red</p>
    </div>
    <div class="flex flex-col items-center justify-center w-full gap-8">
        <div class="hidden md:block md:w-32 aspect-square rounded-md">
            <img src={connect.src} alt="Hulux Connect" class="w-full h-fit">
        </div>
        <div class="flex items-center justify-center gap-12 ">
            <div class="h-[38px] aspect-auto">
                <img src={GoogleBadge.src} class="w-full h-full"/>
            </div>
            <AppleBadge/>
        </div>
    </div>
</div>

<style>
    	@media (min-width: 1570px) {
            #column-left {
                margin: 0;
                left: 50%;
                transform: translateX(calc(-50% - 350px));
            }
            #column-right {
                margin: 0;
                right: 50%;
                transform: translateX(calc(-50% + 350px));
            }
        }
        /* Edge case */
        @media (min-width: 632px) and (max-width: 737px) {
            #cntr{
                align-items: center;
            }
        }
</style>