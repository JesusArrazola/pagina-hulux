---
import Logo from "./Logo.astro";
import CloseIcon from "../assets/icons/close.svg"

const path = Astro.url.pathname;
---
<nav id="mobileMenu" class=" flex flex-col z-10 transition-transform duration-300 ease-in-out translate-x-full pointer-events-none  w-2/3 sm:w-1/3 h-screen bg-secondary fixed top-0 right-0">
    <div class="flex flex-col items-center mt-32">
        <div class="mb-12">
            <Logo />
        </div>
        <nav class="text-white text-center text-lg flex flex-col gap-5">
            <a class:list={[" py-2 px-5 ", path === "/" && "border-b-2 border-b-primary"]} href="/">Inicio</a>
            <a class:list={[" py-2 px-5 ", path === "/nosotros" && "border-b-2 border-b-primary"]} href="/nosotros">Nosotros</a>
            <a class:list={[" py-2 px-5 ", path === "/servicios" && "border-b-2 border-b-primary"]} href="/servicios">Servicios</a>
            <a class:list={[" py-2 px-5 ", path === "/contactanos" && "border-b-2 border-b-primary"]} href="/contactanos">Cont√°ctanos</a>
            <a class="py-2 px-5 rounded-sm bg-tertiary hover:bg-secondary text-secondary hover:text-tertiary" href="#">Contratar</a>
        </nav>
    </div>
</nav>
<style>
    .show{
        display: block;
    }
    .notshow{
        display: none;
    }
</style>