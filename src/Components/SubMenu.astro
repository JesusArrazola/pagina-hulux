---
import Logo from "./Logo.astro";

const path = Astro.url.pathname;
---
<nav id="mobileMenu" class=" flex flex-col z-10 transition-transform duration-300 ease-in-out translate-x-full pointer-events-none  w-2/3 sm:w-1/3 h-screen bg-secondary fixed top-0 right-0">
    <div class="flex flex-col items-center mt-32">
        <div class="mb-12">
            <Logo />
        </div>
        <nav class="text-white text-center text-lg flex flex-col gap-5">
            <a
            class:list={[
                            "py-2 px-5 border-b border-transparent",
                            path === "/" && "border-b-2 border-b-primary",
                        ]}
                        href="/"
        >   
            Inicio
        </a>

        <a
            class:list={[
                            "py-2 px-5 border-b border-transparent",
                            path === "/nosotros/" && "border-b-2 border-b-primary",
                        ]}
                        href="/nosotros"
        >   
            Nosotros
        </a>

        <a
            class:list={[
                            "py-2 px-5 border-b border-transparent",
                            path === "/servicios/" && "border-b-2 border-b-primary",
                        ]}
                        href="/servicios"
        >   
            Servicios
        </a>

        <a
            class:list={[
                            "py-2 px-5 border-b border-transparent",
                            path === "/contactanos/" && "border-b-2 border-b-primary",
                        ]}
                        href="/contactanos"
        >   
            Cont√°ctanos
        </a>
            <a class="py-2 px-5 rounded-sm bg-tertiary hover:bg-secondary text-secondary hover:text-tertiary" href="https://api.whatsapp.com/send/?phone=7727273403&text=Hola%20los%20contacto%20desde%20el%20sitio%20oficial%20de%20Hulux%20Telecomunicaciones,%20estoy%20interesado%20en%20contratar%20su%20servicio" target="_blank">Contratar</a>
        </nav>
    </div>
</nav>
<style>
    .show{
        display: block;
    }
    .notshow{
        display: none;
    }
</style>