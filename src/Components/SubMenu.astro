---
import Logo from "./Logo.astro";
import CloseIcon from "../assets/icons/close.svg"

const path = Astro.url.pathname;
---
<nav id="mobileMenu" class="transition-transform duration-300 ease-in-out translate-x-full pointer-events-none  w-2/3 sm:w-1/3 h-screen bg-secondary fixed top-0 right-0">
    <div class="flex flex-col items-center justify-between">
        <div class="flex w-full flex-row-reverse p-8" id="closeIcon">
            <CloseIcon class="text-tertiary cursor-pointer" />
        </div>
        <div class="mb-12">
            <Logo />
        </div>
        <nav class="text-white text-center text-lg flex flex-col gap-5">
            <a class:list={["py-2 px-5 rounded-2xl", path === "/" && "bg-primary"]} href="/">Inicio</a>
        <a class:list={["py-2 px-5 rounded-2xl", path === "/nosotros" && "bg-primary"]} href="/nosotros">Nosotros</a>
        <a class:list={["py-2 px-5 rounded-2xl", path === "/servicios" && "bg-primary"]} href="/servicios">Servicios</a>
        <a class:list={["py-2 px-5 rounded-2xl", path === "/contactanos" && "bg-primary"]} href="/contactanos">Cont√°ctanos</a>
        <a class="py-2 px-5 rounded-2xl bg-tertiary text-secondary" href="#">Contratar</a>
        </nav>
    </div>
</nav>
<style>
    .show{
        display: block;
    }
    .notshow{
        display: none;
    }
</style>
<script>
    //Ocultar menu
    
    const closeIcon = document.getElementById("closeIcon");
    const menu = document.getElementById("mobileMenu");

    function toggleMenu() {
        menu?.classList.toggle("translate-x-full");
        menu?.classList.toggle("translate-x-0");
        menu?.classList.toggle("pointer-events-none");
    }

    closeIcon?.addEventListener("click",()=>{
        toggleMenu();
    });
</script>