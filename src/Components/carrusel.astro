.carrusel-auto {
  display: flex;
  gap: 1rem;
  width: max-content;
  animation: scrollCarrusel 30s linear infinite;
  scroll-snap-type: x mandatory;
  scroll-behavior: smooth;
}

.carrusel-contenedor:hover .carrusel-auto {
  animation-play-state: paused;
}

.slide {
  flex: 0 0 auto;
  width: 300px;
  height: 100%;
  position: relative;
  scroll-snap-align: start;
  border-radius: 10px;
  overflow: hidden;
}

.slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Degradado oscuro sobre imagen */
.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(10, 44, 69, 0.2), rgba(10, 44, 69, 0.8));
  z-index: 1;
}

/* Texto centrado y responsivo */
.texto-superpuesto {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: clamp(1rem, 4vw, 2.5rem);
  font-weight: bold;
  text-align: center;
  z-index: 2;
  pointer-events: none;
  padding: 0 1rem;
}

/* Animación automática */
@keyframes scrollCarrusel {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); } /* desplaza la mitad del contenido duplicado */
}



