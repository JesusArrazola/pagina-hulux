---
import Layout from "../Layouts/Layout.astro" 
import Hero from "../Components/Hero.astro"
import img from "../assets/nosotros.png";
import HistoriaHulux from "../Components/historiaHulux.astro";
import HitosHulux from "../Components/hitosHulux.astro";
import Mision from "../Components/mision.astro";
import SeparadorNaranja from "../Components/separadorNaranja.astro";
import Vision from "../Components/vision.astro";
import Valores from "../Components/valores.astro";
import CarruselHulux from "../Components/carruselHulux.astro";

//Imagenes
import img1 from "../assets/Entretenimiento_hulux.png";
import img2 from "../assets/Estudiando_con_hulux.png";
import img3 from "../assets/Trabajando_con_hulux.png";
import img4 from "../assets/Carr_2.4.png";
import CasrruselComponent from "../Components/CasrruselComponent.astro";
---

<Layout>
	<Hero 
	title="Nosotros" 
	subtitle={""} bgImage={img}
    year
    linktTo="historia"
    />
	<HistoriaHulux />
    <SeparadorNaranja />
    <HitosHulux />
    <Mision />
    <SeparadorNaranja/>
    <Vision />
    <Valores />
    <CasrruselComponent
    titulo="Conexiones que importan"
    imagenes={[img1,img2,img3,img4]}
/>	
  
</Layout>

<script>
    const hoy = new Date();
    const fundacion = new Date("2011-08-30T00:00:00");

    const años = hoy.getFullYear() - fundacion.getFullYear()
    const year = document.querySelector(".year");
    year!.textContent = `${años}`;
</script>