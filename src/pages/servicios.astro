---
import Layout from "../Layouts/Layout.astro";
import img from "../assets/images/services_hero.gif";
import Hero from "../Components/Hero.astro";
import CasrruselComponent from "../Components/CasrruselComponent.astro";

//Imagenes
import img1 from "../assets/Entretenimiento_hulux.png";
import img2 from "../assets/Estudiando_con_hulux.png";
import img3 from "../assets/Trabajando_con_hulux.png";
import img4 from "../assets/Carr_2.4.png";
import SliderReutilizable from "../Components/SliderReutilizable.astro";
import PlanResidencial from "../Components/PlanResidencial.astro";
import BgContenedor from "../Components/Utilidades/BgContenedor.astro";
import PlanEmpresarial from "../Components/PlanEmpresarial.astro";
import Pasos from "../Components/Secciones/Pasos.astro";
---

<Layout>
	<Hero
		title="Nuestros servicios"
		subtitle="Ofrecemos paquetes de internet diseñados para satisfacer todas tus necesidades de conectividad, con la confiabilidad y velocidad que mereces."
	/>

		<CasrruselComponent
		titulo="Tenemos un plan perfecto para tí"
		imagenes={[img1,img2,img3,img4]}
	/>

		<BgContenedor>
			<a id="residencial"></a>
			<section class="py-8 text-white relative">
				<h2 class="font-bold text-2xl sm:text-4xl mb-12 text-center">Servicios <span class="text-tertiary">residenciales</span></h2>
				<p class="text-center mb-12">
					Estos paquetes llegan por fibra óptica. Elige el plan que mejor se adapte a tu estilo de vida.
				</p>
	
				<SliderReutilizable class_="residenciales" prefix="sr">
					<div class="flex items-center justify-center"> 
						<PlanResidencial  nombre="Básico" cantidad={50} precio={349}/>
					</div>
					<div class="flex items-center justify-center">
						<PlanResidencial nombre="Estándar" cantidad={100} precio={449} />
					</div>
					<div class="flex items-center justify-center">
						<PlanResidencial nombre="Pro" cantidad={200} precio={699}/>
					</div>
					<div class="flex items-center justify-center">
						<PlanResidencial  nombre="Ultra" cantidad={500} precio={999}/>
					</div>
				</SliderReutilizable>
			</section>
		</BgContenedor>
		
		<Pasos />
	<BgContenedor>
		<a id="residencial-tv"></a>
		<section class="py-8 text-white relative">
			<h2 class="font-bold text-2xl sm:text-4xl mb-12 text-center">Servicios residenciales <span class="text-tertiary">+ Hulux TV</span></h2>
			<p class="text-center mb-12">
				Añade TV a tu plan de internet. Elige el plan que mejor se adapte a tu estilo de vida.
			</p>

			<SliderReutilizable class_="residenciales-tv" prefix="srtv">
				<div class="flex items-center justify-center"> 
					<PlanResidencial  nombre="Básico + TV" cantidad={50} precio={449}/>
				</div>
				<div class="flex items-center justify-center">
					<PlanResidencial nombre="Estándar + TV" cantidad={100} precio={549} />
				</div>
				<div class="flex items-center justify-center">
					<PlanResidencial nombre="Pro + TV" cantidad={200} precio={799}/>
				</div>
				<div class="flex items-center justify-center">
					<PlanResidencial  nombre="Ultra + TV" cantidad={500} precio={1099}/>
				</div>
			</SliderReutilizable>
		</section>
	</BgContenedor>


	<CasrruselComponent
		titulo="Disfruta de la mejor experiencia de entretenimiento"
		imagenes={[img1,img2,img3,img4]}
	/>

	<BgContenedor>
		<a id="empresarial"></a>
		<section class="py-8 text-white relative">
			<h2 class="font-bold text-2xl sm:text-4xl mb-12 text-center">Servicios <span class="text-tertiary">empresariales</span></h2>
			<p class="text-center mb-12">
				Garantiza una conexión estable y rápida para tu negocio. Desde pequeños establecimientos hasta grandes corporaciones.
			</p>

			<SliderReutilizable class_="empresariales" prefix="emp">
				<div class="flex items-center justify-center"> 
					<PlanEmpresarial  nombre="Básico" cantidad={100} caracteristicas={[
						"Soporte técnico prioritario",
						"Dirección IP Fija",
						"SLA de 90%",
					]}/>
				</div>
				<div class="flex items-center justify-center"> 
					<PlanEmpresarial  nombre="Avanzado" cantidad={250} caracteristicas={[
						"Beneficios plan básico +",
						"Cuenta de correo",
						"Hosting web de hasta 25GB",
						"Servicio de VPN"
					]}/>
				</div>
				<div class="flex items-center justify-center"> 
					<PlanEmpresarial  nombre="Premium" cantidad={500} caracteristicas={[
						"Beneficios plan avanzado +",
						"Análisis de tráfico en tiempo real",
						"Gestión avanzada de ancho de banda",
					]}/>
				</div>
				<div class="flex items-center justify-center"> 
					<PlanEmpresarial  nombre="Élite" cantidad={750} caracteristicas={[
						"Beneficios plan premium +",
						"Hosting de servidores",
						"Dominios corporativos",
						"Servicios en la nube"
					]}/>
				</div>

			</SliderReutilizable>
		</section>
	</BgContenedor>
	
</Layout>